type User {
  id: ID!
  username: String!
  email: String!
  fullname: String
  role: String!
  isPrivate: Boolean!
  connectionStatus: Int
  followingCount: Int 
  followersCount: Int 
  followRequestsCount: Int 
  postsCount: Int 
  createdAt: Time!
  updatedAt: Time!
}

type Users {
  users: [User]
  pagination: Pagination
}

extend type Query {
  getUserInfo: User
  getUserByUsername(username: String!): User
}
