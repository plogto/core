type Connection {
  id: UUID!
  following: User!
  follower: User!
  status: Int!
  createdAt: Time
  updatedAt: Time
}

type ConnectionsEdge {
  cursor: String!
  node: Connection
}

type Connections {
  totalCount: TotalCount!
  edges: [ConnectionsEdge]!
  pageInfo: PageInfo!
}

extend type Query {
  getFollowersByUsername(
    username: String!
    pageInfo: PageInfoInput
  ): Connections
  getFollowingByUsername(
    username: String!
    pageInfo: PageInfoInput
  ): Connections
  getFollowRequests(pageInfo: PageInfoInput): Connections
}

extend type Mutation {
  followUser(userId: UUID!): Connection
  unfollowUser(userId: UUID!): Connection
  acceptUser(userId: UUID!): Connection
  rejectUser(userId: UUID!): Connection
}
