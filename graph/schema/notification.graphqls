enum NotificationTypeName {
  WELCOME
  LIKE_POST
  REPLY_POST
  LIKE_REPLY
  FOLLOW_USER
  ACCEPT_USER
  MENTION_IN_POST
}

type NotificationType {
  id: ID!
  name: NotificationTypeName!
  template: String!
}

type Notification {
  id: ID!
  notificationType: NotificationType!
  sender: User!
  receiver: User!
  post: Post
  reply: Post
  url: String!
  read: Boolean
  createdAt: Time
  updatedAt: Time
}

type NotificationsEdge {
  cursor: String!
  node: Notification
}

type Notifications {
  totalCount: Int
  edges: [NotificationsEdge]!
  unreadNotificationsCount: Int
  pageInfo: PageInfo!
}

extend type Query {
  getNotifications(pageInfoInput: PageInfoInput): Notifications
}

extend type Mutation {
  readNotifications: Boolean
}

extend type Subscription {
  getNotification: NotificationsEdge
}
