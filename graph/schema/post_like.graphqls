type PostLike {
  id: ID!
  user: User!
  post: Post!
  createdAt: Time!
  updatedAt: Time!
}

type PostLikes {
  postLikes: [PostLike]
  pagination: Pagination
}

extend type Query {
  getPostLikesByPostId(postId: String!, input: PaginationInput): PostLikes
}

extend type Mutation {
  likePost(postId: ID!): PostLike 
  unlikePost(postId: ID!): PostLike 
}
