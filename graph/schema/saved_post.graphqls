type SavedPost {
  id: ID!
  user: User!
  post: Post!
  createdAt: Time
  updatedAt: Time
}

type SavedPostsEdge {
  cursor: String!
  node: SavedPost
}

type SavedPosts {
  totalCount: Int
  edges: [SavedPostsEdge]!
  pageInfo: PageInfo!
}

extend type Query {
  getSavedPosts(pageInfoInput: PageInfoInput): SavedPosts
}

extend type Mutation {
  savePost(postId: ID!): SavedPost
}
