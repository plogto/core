enum PostStatus {
  PUBLIC
  PRIVATE
}

type Post {
  id: UUID!
  status: PostStatus!
  parent: Post
  child: Post
  user: User!
  content: String
  attachment: [File!]
  url: String!
  likes: LikedPosts
  replies: Posts
  isLiked: LikedPost
  isSaved: SavedPost
  createdAt: Time
  updatedAt: Time
}

type PostsEdge {
  cursor: String!
  node: Post
}

type Posts {
  totalCount: TotalCount!
  edges: [PostsEdge]!
  pageInfo: PageInfo!
}

input addPostInput {
  parentId: UUID
  content: String
  status: PostStatus
  attachment: [String!]
}

input editPostInput {
  content: String
  status: PostStatus
}

extend type Query {
  getPostsByUsername(username: String!, pageInfoInput: PageInfoInput): Posts
  getRepliesByUsername(username: String!, pageInfoInput: PageInfoInput): Posts
  getPostsByTagName(tagName: String!, pageInfoInput: PageInfoInput): Posts
  getPostByUrl(url: String!): Post
  getTimelinePosts(pageInfoInput: PageInfoInput): Posts
  getExplorePosts(pageInfo: PageInfoInput): Posts
}

extend type Mutation {
  addPost(input: addPostInput!): Post
  editPost(postId: UUID!, input: editPostInput!): Post
  deletePost(postId: UUID!): Post
}
