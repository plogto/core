type Post {
  id: ID!
  user: User!
  content: String!
  attachment: String
  url: String!
  likes: PostLikes
  comments: Comments
  isLiked: PostLike
  isSaved: PostSave
  createdAt: Time!
  updatedAt: Time!
}

type Posts {
  posts: [Post]
  pagination: Pagination
}

input addPostInput {
  content: String!
  status: Int
  attachment: String
}

extend type Query {
  getPostsByUsername(username: String!, input: PaginationInput): Posts
  getPostsByTagName(tagName: String!, input: PaginationInput): Posts
  getPostByUrl(url: String!): Post
}

extend type Mutation {
  addPost(input: addPostInput!): Post
}
